<?xml version="1.0" encoding="UTF-8"?>
<!--日志级别以及优先级排序: OFF > FATAL > ERROR > WARN > INFO > DEBUG > TRACE > ALL -->
<!--Configuration后面的status，这个用于设置log4j2自身内部的信息输出，可以不设置，当设置成trace时，你会看到log4j2内部各种详细输出-->
<!--monitorInterval：Log4j能够自动检测修改配置 文件和重新配置本身，设置间隔秒数-->
<configuration status="WARN" monitorInterval="300">
    <properties>
        <!--定义变量-->
        <property name="LOG_HOME">/data/tomcat9/</property>
    </properties>
    <!--先定义所有的appender-->
    <appenders>
        <!--这个输出控制台的配置-->
        <console name="Console" target="SYSTEM_OUT">
            <!--输出日志的格式-->
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss:SSS}] [%p] [%t] - %l - %m%n" charset="UTF-8"/>
        </console>
        <!--文件会打印出所有信息，这个log每次运行程序会自动清空，由append属性决定，这个也挺有用的，适合临时测试用-->
        <File name="log" fileName="${LOG_HOME}/logs/express2018/test.log" append="false">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %class{36} %L %M - %msg%xEx%n"/>
        </File>
        <!-- 这个会打印出所有的info及以下级别的信息，每次大小超过size，则这size大小的日志会自动存入按年份-月份建立的文件夹下面并进行压缩，作为存档-->
        <RollingFile name="RollingFileInfo" fileName="${LOG_HOME}/logs/express2018/info.log"
                     filePattern="${LOG_HOME}/logs/express2018/$${date:yyyy-MM}/info-%d{yyyy-MM-dd}-%i.log">
            <!--控制台只输出level及以上级别的信息（onMatch），其他的直接拒绝（onMismatch）-->
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss:SSS}] [%p] [%t] - %l - %m%n" charset="UTF-8"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="300 MB"/>
            </Policies>
        </RollingFile>
        <RollingFile name="RollingFileWarn" fileName="${LOG_HOME}/logs/express2018/warn.log"
                     filePattern="${LOG_HOME}/logs/express2018/$${date:yyyy-MM}/warn-%d{yyyy-MM-dd}-%i.log">
            <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss:SSS}] [%p] [%t] - %l - %m%n" charset="UTF-8"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="300 MB"/>
            </Policies>
        </RollingFile>
        <RollingFile name="RollingFileError" fileName="${LOG_HOME}/logs/express2018/error.log"
                     filePattern="${LOG_HOME}/logs/express2018/$${date:yyyy-MM}/error-%d{yyyy-MM-dd}-%i.log">
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss:SSS}] [%p] [%t] - %l - %m%n" charset="UTF-8"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="300 MB"/>
            </Policies>
        </RollingFile>

        <RollingFile name="pay" fileName="${LOG_HOME}/logs/express2018/pay.log"
                                           filePattern="${LOG_HOME}/logs/express2018/$${date:yyyy-MM}/pay-%d{yyyy-MM-dd}-%i.log">
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss:SSS}] [%p] [%t] - %l - %m%n" charset="UTF-8"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="300 MB"/>
            </Policies>
        </RollingFile>

        <RollingFile name="ipnpay" fileName="${LOG_HOME}/logs/express2018/ipnpay.log"
                                           filePattern="${LOG_HOME}/logs/express2018/$${date:yyyy-MM}/ipnpay-%d{yyyy-MM-dd}-%i.log">
            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss:SSS}] [%p] [%t] - %l - %m%n" charset="UTF-8"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="300 MB"/>
            </Policies>
        </RollingFile>

        <RollingFile name="search" fileName="${LOG_HOME}/logs/express2018/searchlog.log"
                     filePattern="${LOG_HOME}/logs/express2018/$${date:yyyy-MM}/search-%d{yyyy-MM-dd}-%i.log">
            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss:SSS}] [%p] [%t] - %l - %m%n" charset="UTF-8"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="300 MB"/>
            </Policies>
        </RollingFile>

        <RollingFile name="track" fileName="${LOG_HOME}/logs/express2018/tracklog.log"
                     filePattern="${LOG_HOME}/logs/express2018/$${date:yyyy-MM}/track-%d{yyyy-MM-dd}-%i.log">
            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss:SSS}] [%p] [%t] - %l - %m%n" charset="UTF-8"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="300 MB"/>
            </Policies>
        </RollingFile>

        <RollingFile name="price" fileName="${LOG_HOME}/logs/express2018/price.log"
                     filePattern="${LOG_HOME}/logs/express2018/$${date:yyyy-MM}/price-%d{yyyy-MM-dd}-%i.log">
            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss:SSS}] [%p] [%t] - %l - %m%n" charset="UTF-8"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="300 MB"/>
            </Policies>
        </RollingFile>

        <RollingFile name="mail" fileName="${LOG_HOME}/logs/express2018/mail.log"
                     filePattern="${LOG_HOME}/logs/express2018/$${date:yyyy-MM}/mail-%d{yyyy-MM-dd}-%i.log">
            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss:SSS}] [%p] [%t] - %l - %m%n" charset="UTF-8"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="300 MB"/>
            </Policies>
        </RollingFile>

        <RollingFile name="interceptor" fileName="${LOG_HOME}/logs/express2018/interceptor.log"
                     filePattern="${LOG_HOME}/logs/express2018/$${date:yyyy-MM}/interceptor-%d{yyyy-MM-dd}-%i.log">
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss:SSS}] [%p] [%t] - %l - %m%n" charset="UTF-8"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="300 MB"/>
            </Policies>
        </RollingFile>
        <!--js 错误日志 start-->
        <RollingFile name="jserror" fileName="${LOG_HOME}/logs/express2018/jserror.log"
                     filePattern="${LOG_HOME}/logs/express2018/$${date:yyyy-MM}/jserror-%d{yyyy-MM-dd}-%i.log">
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss:SSS}] [%p] [%t] - %l - %m%n" charset="UTF-8"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="300 MB"/>
            </Policies>
        </RollingFile>
        <!--js 错误日志 end-->
        <!--添加购物车和打开产品单页日志 start-->
        <RollingFile name="loadtime" fileName="${LOG_HOME}/logs/express2018/loadtime.log"
                     filePattern="${LOG_HOME}/logs/express2018/$${date:yyyy-MM}/loadtime-%d{yyyy-MM-dd}-%i.log">
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss:SSS}] [%p] [%t] - %l - %m%n" charset="UTF-8"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="300 MB"/>
            </Policies>
        </RollingFile>
        <!--js 错误日志 end-->
    </appenders>
    <!--然后定义logger，只有定义了logger并引入的appender，appender才会生效-->
    <loggers>
        <!--过滤掉spring和mybatis的一些无用的DEBUG信息-->
        <logger name="org.springframework" level="INFO"></logger>
        <logger name="org.mybatis" level="INFO"></logger>
        <root level="INFO">
            <!--<appender-ref ref="Console"/>-->
            <appender-ref ref="RollingFileInfo"/>
            <appender-ref ref="RollingFileWarn"/>
            <appender-ref ref="RollingFileError"/>
        </root>

        <Logger name="pay" level="info">
            <AppenderRef ref="pay" />
        </Logger>
        <Logger name="ipnpay" level="info">
            <AppenderRef ref="ipnpay" />
        </Logger>
        <Logger name="search" level="info">
            <AppenderRef ref="search" />
        </Logger>
        <Logger name="track" level="info">
            <AppenderRef ref="track" />
        </Logger>
        <Logger name="price" level="info">
            <AppenderRef ref="price" />
        </Logger>
        <Logger name="interceptor" level="WARN">
            <AppenderRef ref="interceptor"  />
        </Logger>
        <Logger name="maillog" level="info">
            <AppenderRef ref="mail"  />
        </Logger>
        <Logger name="jserror" level="info">
            <AppenderRef ref="jserror"  />
        </Logger>
        <Logger name="loadtime" level="info">
            <AppenderRef ref="loadtime"  />
        </Logger>
    </loggers>
</configuration>